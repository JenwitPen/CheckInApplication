            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edtActivityRemark"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_span="3"
                    android:ems="20"
                    android:inputType="textMultiLine" />
            </TableRow>

