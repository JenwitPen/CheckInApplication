                        android:id="@+id/rdgEnergy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <RadioButton
                            android:id="@+id/rdbNoEnnergy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="ไม่เติม"/>

                            <RadioButton
                                android:id="@+id/rdbOil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="น้ำมัน"/>
                            <RadioButton
                                android:id="@+id/rdbGas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="แก๊ส"/>

                    </RadioGroup>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/edtEnergyMoney" />


                </LinearLayout>

            </TableRow>

            <TableRow
